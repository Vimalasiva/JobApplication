@model JobApplication.Core.Model.JobModel
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a10c7f6efa.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>

    <title>Adding details</title>
    <style>
        .card {
            width: 100%;
            height: 100%;
            margin-right: 80%;
            margin-top: 10%;
            background-size: cover;
            border-color: black;
            box-shadow: 5px 5px;
        }

        form {
            background-color: transparent;
        }

        button {
            color: white;
        }

        .error {
            color: red;
        }

        #job {
            color: black;
        }

        option {
            color: black;
            font-style: oblique;
        }

        select {
            background: transparent;
            border-radius: 20px;
            width: 260px;
            height: 35px;
            color: black;
            border-color: black;
            font-style: oblique;
            margin-left: 8px;
        }

        label {
            font-size: 100%;
        }
    </style>
</head>

    <section class=" bg-image"
         style="background:linear-gradient(rgba(45,165,253,1) 3%, rgba(47,34,195,1) 100%);width:100%;height:200%;background-size:cover;">
        <div class="mask  align-items-center gradient-custom-3">
            <div class="row justify-content-center align-items-center ">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5 ">
                            <h2 class="text-uppercase text-center mb-5" style="font-family:Times New Roman;font-weight: 900;">STUDENT DETAIL</h2>
                            <form id="myform">
                            @using (Html.BeginForm("Create", "Application", FormMethod.Post, new { enctype = "multipart/form-data", @id = "start" }))
                            {
                                @Html.HiddenFor(m=>m.ID,new{@id="applicantid"})
                                <div id="clear">
                                    <div class="col-md-6">
                                        <label for="inputEmail4" class="form-label" style="font-style: oblique;">FIRST NAME<span style="color:red;">*</span></label>
                                        <i class="fa-solid fa-user" style="padding-top:10px;"></i>
                                        @Html.TextBoxFor(m => m.Name, new { maxlength="20", @class = "form-control",@placeholder="Enter your Name",@id="name",@name="name",Style="border-radius:20px;border-color:black;background-color:Transparen;font-style: oblique;margin-left:10px;"})
                                    </div>
                                    <div class="col-md-6 mt-1">
                                        <label for="inputPassword4" class="form-label" style="font-style: oblique;">AGE<span style="color:red">*</span></label>
                                        <i class="fa-solid fa-cake-candles" style="padding-top:10px;"></i>
                                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control",maxlength=2,@placeholder="Enter your age",@id="age",@name="age",Style="border-radius:20px;border-color:black;background-color:Transparent;font-style: oblique;margin-left:10px;"})
                                    </div>
                                    <div class="col-md-6 mt-1 ">
                                        <label for="inputEmail4" class="form-label" style="font-style: oblique;">GENDER</label>
                                        <i class="fa-solid fa-venus-mars" style="padding-top:10px;"></i>
                                        <div class="form-check mt-2" id="radio" name="gender">
                                            <label style="background-color:Transparent;font-style: oblique;"> @Html.RadioButtonFor(m => m.Gender,"Male")Male</label>
                                            <label style="background-color:Transparent;font-style: oblique;"> @Html.RadioButtonFor(m => m.Gender,"Female")Female</label>
                                            <label style="background-color:Transparent;font-style: oblique;"> @Html.RadioButtonFor(m => m.Gender,"Other")Other</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mt-1">
                                        <label for="inputPassword4" class="form-label" style="font-style: oblique;">LOCATION<span style="color:red">*</span></label>
                                        <i class="fa-solid fa-location-dot" style="padding-top:8px;"></i>
                                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control",@placeholder="Enter your location",@id="location",@name="age",Style="border-radius:20px;border-color:black;background-color:Transparent;font-style: oblique;margin-left:10px;"})
                                    </div>
                                    <div class="col-md-6 mt-1">
                                        <label for="inputPassword4" class="form-label" style="font-style: oblique;">Email<span style="color:red">*</span></label>
                                        <i class="fa-solid fa-cake-candles" style="padding-top:10px;"></i>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control",@placeholder="Enter your email id",@id="email",@name="age",Style="border-radius:20px;border-color:black;background-color:Transparent;font-style: oblique;margin-left:10px;"})
                                    </div>
                                    <div class="mt-3" id="radio">
                                        <label style="font-style: oblique" id="resume">Upload File<span style="color:red">*</span></label>
                                        <input type="file" name="formFile" />
                                    </div>
                                    <div style="color:red;">
                                        @ViewBag.Message1 &nbsp;
                                        @ViewBag.Message2 &nbsp;
                                        @ViewBag.Message3 &nbsp;
                                        @ViewBag.Message4 &nbsp;
                                        @ViewBag.Message5 &nbsp;
                                        @ViewBag.Message6
                                    </div>
                                </div>
                                <div class="row">
                                    
                                    <div class="col mybutton" style="margin-top:20px;">
                                        <button id="clear" class="reset" type="button" name="reset" onclick="Clear()" style="border-radius:15px;background:linear-gradient(rgba(45,165,253,1) 3%, rgba(47,34,195,1) 100%)">Reset</button>
                                        <button id="button" style="border-radius:15px;background:linear-gradient(rgba(45,165,253,1) 3%, rgba(47,34,195,1) 100%)">Submit</button>
                                    </div>
                                </div>
                                }
                                <div class="col" style="margin-top:20px;">
                                    <button onclick="location.href='@Url.Action("List","Application")'" style="border-radius:15px;background:linear-gradient(rgba(45,165,253,1) 3%, rgba(47,34,195,1) 100%)">Back To List</button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<script>
    $().ready(function () {
        $("#start").validate({
            rules: {
                Name: {
                    required: true,
                    pattern: '^[a-zA-Z][a-zA-Z\\s]+$',
                },
                Age: {
                    required: true,
                    number: true,
                    digits: true,
                },
                Location: {
                    required: true,
                },
                Email: {
                    required: true,
                    email: true,
                },
                Gender: {
                    required: true,
                },
                Resume: {
                    required: true,
                },
                formFile: {
                    required: true,
                    extension: "xls|xlsx",
                },
            },
            messages:
            {
                Name: {
                    required: "Please enter a Name",
                },
                Age: {
                    required: " Please enter your age",
                    digits: "only numbers are allowed",
                },
                Location: {
                    required: "Enter your location",
                },
                Email: {
                    required: "Enter your email ID",
                },
                Resume: {
                    required: "Please upload a file"
                },
                formFile: {
                    required: "File must be uploaded",
                    extension: "Please upload a excel file"
                },
            },
            errorPlacement: function (error, element) {
                if (element.is(":radio") || element.is(":file")) {
                    error.insertAfter(element.parents('#radio'));
                }
                else {
                    error.insertAfter(element);
                }
            },
        });
    });

    function Clear() {
        $("#clear").find("select,input:not(:radio)").val("");
        $('input:radio').prop("checked", false);
    }


</script>












